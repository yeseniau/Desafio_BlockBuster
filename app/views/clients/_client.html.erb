<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movie.name%></td>
    <td><%= link_to "Mostrar", client %></td>
    <td><%= link_to "Editar", edit_client_path(client) %></td>
    <td><%= button_to "Eliminar", client, method: :delete, class: "btn" %></td>
  </tr>
</div>